<%- include('partials/header') %>

    <body
        style="min-height: 100vh; display: flex; align-items: center; justify-content: center; background: var(--bg-body); margin: 0; padding: 20px;">

        <div class="card"
            style="width: 100%; max-width: 480px; text-align: center; padding: 60px 40px; border: 1px solid var(--border-color); box-shadow: 0 20px 40px rgba(0,0,0,0.2);">

            <!-- Animated Icon (Optional) -->
            <div
                style="width: 80px; height: 80px; background: linear-gradient(135deg, var(--primary), var(--secondary)); border-radius: 24px; margin: 0 auto 30px; display: flex; align-items: center; justify-content: center; box-shadow: 0 10px 20px rgba(244, 63, 94, 0.3);">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="white"
                    style="width: 40px; height: 40px;">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
            </div>

            <h1
                style="font-size: 2.5rem; margin-bottom: 10px; background: linear-gradient(to right, #fff, #999); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                Powerhouse</h1>
            <p class="text-muted" style="margin-bottom: 50px; font-size: 1.1em;">Smart House Management System</p>

            <div style="display: flex; flex-direction: column; gap: 15px;">
                <a href="/admin/login" class="btn btn-primary"
                    style="padding: 16px; font-size: 1.1em; display: flex; align-items: center; justify-content: center; gap: 10px;">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                        style="width: 20px;">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                    Admin Login
                </a>

                <a href="/user/login" class="btn"
                    style="padding: 16px; font-size: 1.1em; background: var(--bg-input); color: var(--text-main); border: 1px solid var(--border-color); display: flex; align-items: center; justify-content: center; gap: 10px; transition: all 0.3s ease;">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                        style="width: 20px;">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                    User Login
                </a>
            </div>

            <div style="margin-top: 40px; font-size: 0.8em; color: var(--text-muted); opacity: 0.6;">
                &copy; <%= new Date().getFullYear() %> Powerhouse. All rights reserved.
            </div>
        </div>

    </body>

    </html>