<div class="sidebar">
    <!-- Header with Toggle -->
    <div style="margin-bottom: 40px; display: flex; justify-content: space-between; align-items: flex-start;">
        <div style="padding-left: 10px;">
            <h2 style="margin: 0; font-size: 1.5rem;">âš¡ Powerhouse</h2>
            <p class="text-muted" style="margin: 0; font-size: 0.9em;">
                <%= user.role==='admin' ? 'Admin Portal' : 'Member Portal' %>
            </p>
        </div>

        <button onclick="toggleTheme()" class="btn-icon" aria-label="Toggle Theme" title="Toggle Theme">
            <div id="themeIcon" style="transition: transform 0.5s ease;">
                <!-- Default Icon (Sun) -->
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                    style="width: 24px; height: 24px;">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
            </div>
        </button>
    </div>

    <!-- Profile Summary -->
    <div
        style="text-align: center; margin-bottom: 30px; padding: 20px; background: var(--bg-card); border-radius: 20px; border: 1px solid var(--border-color);">
        <div
            style="width: 64px; height: 64px; background: var(--secondary-bg); border-radius: 50%; margin: 0 auto 12px; display: flex; align-items: center; justify-content: center; font-size: 1.5em; font-weight: bold; color: var(--text-main); border: 1px solid var(--border-color);">
            <%= user.name.charAt(0).toUpperCase() %>
        </div>
        <h4 style="margin-bottom: 4px; font-size: 1.1em; color: var(--text-main);">
            <%= user.name %>
        </h4>
        <p class="text-muted" style="font-size: 0.85em; margin: 0;">
            <%= user.email %>
        </p>
    </div>

    <!-- Navigation -->
    <nav style="flex: 1;">
        <% if (user.role==='admin' ) { %>
            <a href="/admin/dashboard"
                class="nav-link <%= typeof page !== 'undefined' && page === 'bills' ? 'active' : '' %>">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                </svg>
                Bill Management
            </a>
            <a href="/admin/users"
                class="nav-link <%= typeof page !== 'undefined' && page === 'users' ? 'active' : '' %>">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
                Roommates
            </a>
            <% } else { %>
                <div
                    style="margin-bottom: 12px; font-size: 0.85em; text-transform: uppercase; letter-spacing: 0.05em; color: var(--text-muted); padding-left: 12px;">
                    Menu</div>

                <a href="/user/dashboard"
                    class="nav-link <%= typeof page !== 'undefined' && page === 'dashboard' ? 'active' : '' %>">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                    </svg>
                    Overview
                </a>
                <a href="/user/pending"
                    class="nav-link <%= typeof page !== 'undefined' && page === 'pending' ? 'active' : '' %>">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Pending Bills
                </a>
                <a href="/user/bills"
                    class="nav-link <%= typeof page !== 'undefined' && page === 'bills' ? 'active' : '' %>">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                    </svg>
                    Current Bills
                </a>
                <% } %>
    </nav>

    <!-- Logout -->
    <a href="#" onclick="logout(event)" class="nav-link" style="color: var(--error); margin-top: auto;">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
        </svg>
        Logout
    </a>
</div>

<style>
    .btn-icon {
        background: transparent;
        border: none;
        color: var(--text-secondary);
        cursor: pointer;
        padding: 8px;
        border-radius: 50%;
        transition: all 0.3s ease;
    }

    .btn-icon:hover {
        background: var(--bg-input);
        color: var(--text-main);
    }
</style>

<script>
    async function logout(e) {
        e.preventDefault();

        // Check for SweetAlert
        if (typeof Swal !== 'undefined') {
            const result = await Swal.fire({
                title: 'Logout?',
                text: "Are you sure you want to sign out?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: 'var(--error)',
                cancelButtonColor: 'var(--text-muted)',
                confirmButtonText: 'Yes, Logout',
                background: 'var(--bg-card)',
                color: 'var(--text-main)'
            });

            if (!result.isConfirmed) return;
        } else {
            if (!confirm("Are you sure you want to logout?")) return;
        }

        try {
            await fetch('/api/auth/logout', { method: 'GET' });
            localStorage.removeItem('token');
            localStorage.removeItem('user');
            window.location.href = '/user/login';
        } catch (err) {
            console.error(err);
            window.location.href = '/user/login';
        }
    }

    const sunIcon = `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="width: 24px; height: 24px;"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" /></svg>`;
    const moonIcon = `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="width: 24px; height: 24px;"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" /></svg>`;

    function updateIcon(theme) {
        const iconContainer = document.getElementById('themeIcon');
        if (theme === 'dark') {
            iconContainer.innerHTML = sunIcon;
        } else {
            iconContainer.innerHTML = moonIcon;
        }
    }

    function toggleTheme() {
        const current = document.documentElement.getAttribute('data-theme');
        const next = current === 'light' ? 'dark' : 'light';
        document.documentElement.setAttribute('data-theme', next);
        localStorage.setItem('theme', next);

        const iconContainer = document.getElementById('themeIcon');
        iconContainer.style.transform = 'rotate(180deg) scale(0.5)';
        setTimeout(() => {
            updateIcon(next);
            iconContainer.style.transform = 'rotate(360deg) scale(1)';
            setTimeout(() => iconContainer.style.transform = 'none', 300);
        }, 200);
    }

    // Init Icon
    updateIcon(document.documentElement.getAttribute('data-theme') || 'dark');
</script>